<body>
<div class="app">
  <h1>Kleines Einmaleins</h1>
  <div class="subtitle">
    WÃ¤hle eine Reihe (2â€“10) fÃ¼r deinen Selbsttest.<br>
    20 Aufgaben, jeweils mit 15 Sekunden Zeit.
  </div>

  <!-- Start-Bereich mit Reihen-Auswahl -->
  <div id="start-screen">
    <div class="center">
      <p>Bitte genau <strong>eine</strong> Reihe auswÃ¤hlen.</p>
    </div>

    <div class="reihen-grid" id="reihen-grid">
      <!-- Buttons 2â€“10 werden per JS erzeugt -->
    </div>

    <div class="selected-info" id="selected-info"></div>

    <button class="primary-btn" id="start-btn" disabled>Los!</button>
  </div>

  <!-- Quiz-Bereich -->
  <div id="quiz-screen" class="hidden">
    <div class="progress" id="progress-text"></div>
    <div class="center">
      <div class="tag" id="variant-label"></div>
      <div class="equation" id="equation-text">_ Â· _ = _</div>
    </div>
    <input type="number" id="answer-input" placeholder="Deine Antwort" autocomplete="off">
    <button class="primary-btn" id="submit-btn">OK</button>
    <div class="feedback" id="feedback"></div>
    <div class="stats">
      Bisher richtig: <span id="stat-correct">0</span> / <span id="stat-total">20</span><br>
      Davon beim ersten Versuch richtig: <span id="stat-firsttry">0</span><br>
      Falsche Versuche insgesamt: <span id="stat-wrong">0</span><br>
      GeÃ¼bte Reihe: <span id="stat-rows"></span>
    </div>
  </div>

  <!-- Ergebnis-Bereich -->
  <div id="result-screen" class="hidden center">
    <h2>Fertig! ðŸŽ‰</h2>
    <p id="result-summary"></p>
    <button class="primary-btn" id="restart-btn">Nochmal mit Reihen-Auswahl</button>
  </div>
</div>

<script>
  const TOTAL_QUESTIONS = 20;
  const MIN_FACTOR = 1;
  const MAX_FACTOR = 10;
  const TIME_PER_QUESTION = 15; // Sekunden

  let selectedRow = null;        // einzelne Reihe, z. B. 7
  let currentQuestion = null;
  let questionsSolved = 0;
  let attemptsCurrent = 0;
  let correctFirstTry = 0;
  let wrongAttemptsTotal = 0;

  let timeLeft = TIME_PER_QUESTION;
  let timerId = null;

  const startScreen = document.getElementById('start-screen');
  const quizScreen = document.getElementById('quiz-screen');
  const resultScreen = document.getElementById('result-screen');

  const reihenGrid = document.getElementById('reihen-grid');
  const selectedInfo = document.getElementById('selected-info');
  const startBtn = document.getElementById('start-btn');

  const progressText = document.getElementById('progress-text');
  const equationText = document.getElementById('equation-text');
  const answerInput = document.getElementById('answer-input');
  const feedback = document.getElementById('feedback');
  const statCorrect = document.getElementById('stat-correct');
  const statTotal = document.getElementById('stat-total');
  const statFirsttry = document.getElementById('stat-firsttry');
  const statWrong = document.getElementById('stat-wrong');
  const statRows = document.getElementById('stat-rows');
  const variantLabel = document.getElementById('variant-label');
  const resultSummary = document.getElementById('result-summary');

  const submitBtn = document.getElementById('submit-btn');
  const restartBtn = document.getElementById('restart-btn');

  // Reihen-Buttons erzeugen (2â€“10)
  for (let n = 2; n <= 10; n++) {
    const btn = document.createElement('button');
    btn.type = 'button';
    btn.textContent = n.toString();
    btn.className = 'reihe-btn';
    btn.dataset.value = n.toString();
    btn.addEventListener('click', () => toggleRow(n));
    reihenGrid.appendChild(btn);
  }

  // Info aktualisieren & Start-Button aktivieren/deaktivieren
  function updateSelectedInfo() {
    if (selectedRow === null) {
      selectedInfo.textContent = 'Keine Reihe ausgewÃ¤hlt.';
      startBtn.disabled = true;
    } else {
      selectedInfo.textContent = 'AusgewÃ¤hlte Reihe: ' + selectedRow;
      startBtn.disabled = false;
    }
  }

  // Nur eine Reihe auswÃ¤hlbar (erneuter Klick auf dieselbe Reihe = abwÃ¤hlen)
  function toggleRow(n) {
    const buttons = reihenGrid.querySelectorAll('.reihe-btn');

    if (selectedRow === n) {
      // abwÃ¤hlen
      selectedRow = null;
    } else {
      selectedRow = n;
    }

    buttons.forEach(btn => {
      const val = Number(btn.dataset.value);
      if (val === selectedRow) {
        btn.classList.add('selected');
      } else {
        btn.classList.remove('selected');
      }
    });

    updateSelectedInfo();
  }

  // Start-Button
  startBtn.addEventListener('click', startTraining);
  submitBtn.addEventListener('click', checkAnswer);
  restartBtn.addEventListener('click', () => {
    // ZurÃ¼ck zur Reihen-Auswahl
    stopTimer();
    quizScreen.classList.add('hidden');
    resultScreen.classList.add('hidden');
    startScreen.classList.remove('hidden');
  });

  // Enter im Eingabefeld = OK
  answerInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
      checkAnswer();
    }
  });

  function startTraining() {
    if (selectedRow === null) return;

    questionsSolved = 0;
    attemptsCurrent = 0;
    correctFirstTry = 0;
    wrongAttemptsTotal = 0;

    statCorrect.textContent = '0';
    statTotal.textContent = TOTAL_QUESTIONS.toString();
    statFirsttry.textContent = '0';
    statWrong.textContent = '0';
    statRows.textContent = selectedRow.toString();
    feedback.textContent = '';
    feedback.className = 'feedback';

    startScreen.classList.add('hidden');
    resultScreen.classList.add('hidden');
    quizScreen.classList.remove('hidden');

    newQuestion();
  }

  // Timer-Funktionen
  function startTimer() {
    stopTimer();
    timeLeft = TIME_PER_QUESTION;
    updateProgressText();
    timerId = setInterval(() => {
      timeLeft--;
      if (timeLeft <= 0) {
        timeLeft = 0;
        updateProgressText();
        handleTimeout();
      } else {
        updateProgressText();
      }
    }, 1000);
  }

  function stopTimer() {
    if (timerId !== null) {
      clearInterval(timerId);
      timerId = null;
    }
  }

  function updateProgressText() {
    progressText.textContent =
      `Aufgabe ${questionsSolved + 1} von ${TOTAL_QUESTIONS} â€“ Zeit: ${timeLeft} s`;
  }

  function handleTimeout() {
    stopTimer();
    wrongAttemptsTotal++;
    statWrong.textContent = wrongAttemptsTotal.toString();
    feedback.textContent = 'Zeit abgelaufen! Versuch es nochmal!';
    feedback.className = 'feedback error';
    // gleiche Aufgabe bleibt, Timer neu starten
    startTimer();
  }

  // Neue Aufgabe erzeugen: ausgewÃ¤hlte Reihe * 1â€“10 in verschiedenen Varianten
  function newQuestion() {
    attemptsCurrent = 0;
    feedback.textContent = '';
    feedback.className = 'feedback';

    currentQuestion = generateQuestion();
    equationText.textContent = currentQuestion.display;
    variantLabel.textContent = currentQuestion.variantLabel;

    timeLeft = TIME_PER_QUESTION;
    updateProgressText();
    answerInput.value = '';
    answerInput.focus();
    startTimer();
  }

  function generateQuestion() {
    const row = selectedRow;                       // feste Reihe
    const b = randomInt(MIN_FACTOR, MAX_FACTOR);   // Faktor 1â€“10
    const product = row * b;

    // Varianten:
    // 0: x Â· b = product  (Faktor der Reihe suchen)
    // 1: row Â· x = product
    // 2: row Â· b = ?      (Produkt suchen)
    const variant = randomInt(0, 2);

    let display, answer, label;

    if (variant === 0) {
      display = `x Â· ${b} = ${product}`;
      answer = row;
      label = `${row}er-Reihe â€“ Faktor suchen`;
    } else if (variant === 1) {
      display = `${row} Â· x = ${product}`;
      answer = b;
      label = `${row}er-Reihe â€“ Faktor suchen`;
    } else {
      display = `${row} Â· ${b} = ?`;
      answer = product;
      label = `${row}er-Reihe â€“ Produkt suchen`;
    }

    return {
      row,
      b,
      product,
      variant,
      display,
      answer,
      variantLabel: label
    };
  }

  function checkAnswer() {
    const value = answerInput.value.trim();
    if (value === '') {
      feedback.textContent = 'Bitte gib eine Zahl ein.';
      feedback.className = 'feedback error';
      answerInput.focus();
      return;
    }

    const given = Number(value);
    if (!Number.isFinite(given)) {
      feedback.textContent = 'Das ist keine gÃ¼ltige Zahl.';
      feedback.className = 'feedback error';
      answerInput.focus();
      return;
    }

    attemptsCurrent++;

    if (given === currentQuestion.answer) {
      // Richtig
      stopTimer();
      if (attemptsCurrent === 1) {
        correctFirstTry++;
      }
      questionsSolved++;

      statCorrect.textContent = questionsSolved.toString();
      statFirsttry.textContent = correctFirstTry.toString();

      feedback.textContent = 'Richtig! ðŸ‘';
      feedback.className = 'feedback ok';

      if (questionsSolved >= TOTAL_QUESTIONS) {
        endTraining();
      } else {
        setTimeout(newQuestion, 500);
      }
    } else {
      // Falsch
      wrongAttemptsTotal++;
      statWrong.textContent = wrongAttemptsTotal.toString();
      feedback.textContent = 'Leider falsch. Versuch es nochmal!';
      feedback.className = 'feedback error';
      answerInput.select();
      answerInput.focus();
      // Timer lÃ¤uft weiter â€“ die verbleibende Zeit bleibt.
    }
  }

  function endTraining() {
    stopTimer();
    quizScreen.classList.add('hidden');
    resultScreen.classList.remove('hidden');

    const quote = (correctFirstTry / TOTAL_QUESTIONS * 100).toFixed(0);
    const rowText = selectedRow;

    resultSummary.innerHTML =
      `Du hast <strong>${TOTAL_QUESTIONS}</strong> Aufgaben zur <strong>${rowText}er-Reihe</strong> gelÃ¶st.<br>` +
      `Davon waren <strong>${correctFirstTry}</strong> schon beim ersten Versuch richtig ` +
      `(<strong>${quote}%</strong>).<br>` +
      `Du hattest insgesamt <strong>${wrongAttemptsTotal}</strong> falsche Versuche.`;
  }

  function randomInt(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  // Initial: Info ohne Auswahl
  updateSelectedInfo();
</script>
</body>
</html>
